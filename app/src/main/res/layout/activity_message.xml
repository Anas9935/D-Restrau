<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Manager.MessageActivity">
    <ListView
        android:id="@+id/manager_message_Lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/message_todo_left"
        android:layout_above="@id/manager_message_ll"
        android:layout_marginBottom="8dp"
        />
    <LinearLayout
        android:id="@+id/manager_message_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_alignParentBottom="true"
        >
        <EditText
            android:id="@+id/manager_message_edit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:hint="Message"
            />

        <ImageView
            android:id="@+id/manager_message_send_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="#AFFF51"
            app:srcCompat="@drawable/ic_send_black_24dp"
            />
    </LinearLayout>
</RelativeLayout>