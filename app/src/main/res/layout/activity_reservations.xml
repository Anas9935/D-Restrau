        android:id="@+id/res_food_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/res_text2"
        tools:listitem="@layout/bill_item_todo"
        >

    </ListView>
    <RelativeLayout
        android:id="@+id/res_disc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/res_food_item"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discount"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/res_discAmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-50"
            android:layout_alignParentEnd="true"
            android:textSize="16sp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/res_disc_special"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/res_disc"
        android:visibility="gone"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Special Discount"
            android:textSize="16sp"
            android:textColor="#000"
            />

        <TextView
            android:id="@+id/res_discAmt_sptl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-100"
            android:layout_alignParentEnd="true"
            android:textSize="16sp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/res_totalAmt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/res_disc_special"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To Pay"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000"
            />

        <TextView
            android:id="@+id/res_finalAmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2500"
            android:layout_alignParentEnd="true"
            android:textSize="18sp"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/res_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date of Reservation"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_below="@id/res_totalAmt"
        android:layout_marginStart="16dp"
        />
    <ImageView
        android:id="@+id/res_datePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_date_range_black_24dp"
        android:layout_toRightOf="@id/res_text3"
        android:layout_below="@id/res_totalAmt"
        android:layout_marginStart="16dp"
        />
    <TextView
        android:id="@+id/res_datesel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date selected"
        android:layout_below="@id/res_text3"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        />
    <TextView
        android:id="@+id/res_text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time Slot"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_below="@id/res_datesel"
        android:layout_marginStart="16dp"
        />
    <Spinner
        android:id="@+id/res_time_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/res_datesel"
        android:layout_toRightOf="@id/res_text4"
        />
        <TextView
            android:id="@+id/res_time_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:layout_below="@id/res_datesel"
            android:layout_toRightOf="@id/res_time_spinner"
            />
    <LinearLayout
        android:id="@+id/res_seat_check_LL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/res_time_available"
        android:layout_centerHorizontal="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reserve Seat"
            android:textSize="16sp"
            />
        <Switch
            android:id="@+id/res_reserve_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:switchMinWidth="150dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Take Away"
            />
    </LinearLayout>
    <EditText
        android:id="@+id/res_nop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Number of People"
        android:layout_below="@id/res_seat_check_LL"
        android:layout_marginStart="16dp"
        />
    <Button
        android:id="@+id/res_pay_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="set payment"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        />

</RelativeLayout>