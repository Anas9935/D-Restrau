<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Authentication.Register"
    android:background="@color/myColorPrimaryLight"
    >
    <LinearLayout
        android:id="@+id/registration_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        >
    <TextView
        android:id="@+id/reg_91"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+91"
        android:textColor="#fff"
        android:textSize="20sp"
        android:layout_gravity="center_vertical"


        />
    <EditText
        android:id="@+id/reg_phNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="PhoneNumber"
        android:inputType="phone"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        />
    </LinearLayout>
    <EditText
        android:id="@+id/reg_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/registration_ll"
        android:hint="Email"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        />
    <EditText
        android:id="@+id/reg_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_below="@id/reg_email"
        android:layout_marginStart="16dp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:layout_marginEnd="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        />
    <ImageView
        android:id="@+id/reg_saveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/arrow_right_2"
        android:layout_margin="16dp"
        />
</RelativeLayout>