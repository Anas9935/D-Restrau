<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Manager.AboutRestActivity"
    >
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/RestImgFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RestName"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/myColorPrimaryLight"
        >
        <ImageView
            android:id="@+id/RestImg"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />
        <ImageView
            android:id="@+id/RestImgCam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_photo_camera_black_24dp"
            android:layout_gravity="center_horizontal|bottom"
            />
    </FrameLayout>


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="About"
        android:textColor="@color/myColorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RestImgFrame" />

    <TextView
        android:id="@+id/RestName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="Name Of The Restaurant"
        android:textColor="@color/myColorPrimaryDark"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
<FrameLayout
    android:id="@+id/RestAboutFrame"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toStartOf="@+id/RestDropdownBtn"
    app:layout_constraintStart_toStartOf="@+id/textView2"
    app:layout_constraintTop_toBottomOf="@+id/textView2"
    android:layout_marginStart="8dp"
    >
    <TextView
        android:id="@+id/RestAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="@tools:sample/lorem/random"
        />
    <EditText
        android:visibility="gone"
        android:id="@+id/RestAboutEditView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Write Information About your Restaurant"
        />

</FrameLayout>


    <ImageView
        android:id="@+id/RestDropdownBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/RestAboutFrame"
        app:srcCompat="@drawable/ic_arrow_drop_down_black_24dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="RID"
        android:textColor="@color/myColorAccent"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/RestAboutFrame" />

    <TextView
        android:id="@+id/RestRid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toTopOf="@+id/textView8"
        tools:text="adskjbfkjbfkjjadsbkashhasuuhasiuhas"
        android:textColor="@color/myColorPrimaryDark"
        />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Manager"
        android:textColor="@color/myColorAccent"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/RestManName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        tools:text="@tools:sample/full_names"
        app:layout_constraintStart_toEndOf="@+id/textView19"
        app:layout_constraintTop_toTopOf="@+id/textView19"
        android:textColor="@color/myColorPrimaryDark"
        />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Contact"
        app:layout_constraintStart_toStartOf="@+id/textView19"
        app:layout_constraintTop_toBottomOf="@+id/textView19"
        android:textColor="@color/myColorAccent"/>

    <TextView
        android:id="@+id/RestContactNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/textView21"
        app:layout_constraintTop_toTopOf="@+id/textView21"
        tools:text="@tools:sample/us_phones"
        android:textColor="@color/myColorPrimaryDark"/>

    <TextView
        android:id="@+id/RestEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="anas@gmail.com"
        app:layout_constraintStart_toStartOf="@+id/RestContactNo"
        app:layout_constraintTop_toBottomOf="@+id/RestContactNo"
        android:textColor="@color/myColorPrimaryDark"/>

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Address"
        android:textColor="@color/myColorAccent"
        app:layout_constraintStart_toStartOf="@+id/textView21"
        app:layout_constraintTop_toBottomOf="@+id/RestEmail" />

    <TextView
        android:id="@+id/RestAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="16dp"
        tools:text="Hundal Khel,Near City Marriage Lawn,New Delhi,202116"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView24"
        app:layout_constraintTop_toTopOf="@+id/textView24"
        android:textColor="@color/myColorPrimaryDark"
        />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/RestAddress">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="2 Seaters-"
                android:textColor="@color/myColorAccent"/>

            <TextView
                android:id="@+id/Rest2Seaters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                tools:text="5"
                android:textColor="@color/myColorPrimaryDark"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="4 Seaters-"
                android:textColor="@color/myColorAccent"/>

            <TextView
                android:id="@+id/Rest4Seaters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                tools:text="4"
                android:textColor="@color/myColorPrimaryDark"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView85"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="6 Seaters-"
                android:textColor="@color/myColorAccent"/>

            <TextView
                android:id="@+id/Rest6Seaters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="@color/myColorPrimaryDark"
                tools:text="2" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Time-"
        android:textColor="@color/myColorAccent"
        app:layout_constraintStart_toStartOf="@+id/textView24"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <TextView
        android:id="@+id/RestTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        tools:text="10:00-22:00"
        app:layout_constraintStart_toEndOf="@+id/textView33"
        app:layout_constraintTop_toTopOf="@+id/textView33"
        android:textColor="@color/myColorPrimaryDark"
        />

    <ImageView
        android:visibility="gone"
        android:id="@+id/RestAbouteditBtn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintEnd_toEndOf="@+id/RestDropdownBtn"
        app:layout_constraintTop_toBottomOf="@+id/RestDropdownBtn"
        app:srcCompat="@android:drawable/ic_menu_edit"
        android:tint="@color/myColorAccent"
        />

    <ImageView
        android:visibility="gone"
        android:id="@+id/RestAboutSaveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/RestDropdownBtn"
        app:layout_constraintTop_toBottomOf="@+id/RestAboutUndo"
        app:srcCompat="@drawable/ic_check_black_24dp"
        android:tint="@color/myColorAccent"/>

    <ImageView
        android:visibility="gone"
        android:id="@+id/RestAboutClearAll"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintEnd_toEndOf="@+id/RestDropdownBtn"
        app:layout_constraintTop_toBottomOf="@+id/RestDropdownBtn"
        app:srcCompat="@android:drawable/ic_notification_clear_all"
        android:tint="@color/myColorAccent"
        />

    <ImageView
        android:visibility="gone"
        android:id="@+id/RestAboutUndo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/RestDropdownBtn"
        app:layout_constraintTop_toBottomOf="@+id/RestAboutClearAll"
        app:srcCompat="@drawable/ic_undo_black_24dp"
        android:tint="@color/myColorAccent"
        />

    <ImageView
        android:id="@+id/RestEditFull"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_edit"
        android:tint="@color/myColorAccent"
        />

    <FrameLayout
        android:visibility="gone"
        android:id="@+id/RestFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#C88A8A8A"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>