<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Authentication.Login"
    android:background="@color/myColorPrimaryLight"
    >
<RelativeLayout
    android:id="@+id/login_parentLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="32dp"
    android:layout_marginEnd="32dp"
    android:layout_gravity="center"
    android:background="@drawable/login_card"
    >

    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="USERNAME OR EMAIL"
        android:id="@+id/usernameAuth"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="PASSWORD"
        android:inputType="textPassword"
        android:layout_below="@id/usernameAuth"
        android:id="@+id/passwordAuth"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_below="@id/passwordAuth"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:id="@+id/loginAuth"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_below="@id/loginAuth"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:id="@+id/createAuth"
        android:layout_marginBottom="16dp"
        />

</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        >
        <LinearLayout
            android:id="@+id/login_btnLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/login_btn_bartender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bartender"
                />
            <Button
                android:id="@+id/login_btn_cleaner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cleaner"
                />
            <Button
                android:id="@+id/login_btn_chef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="chef"
                />
            <Button
                android:id="@+id/login_btn_cook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cook"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/login_btn_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/login_btnLayout"
            >
            <Button
                android:id="@+id/login_btn_manager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MAnager"
                />
            <Button
                android:id="@+id/login_btn_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User"
                />
            <Button
                android:id="@+id/login_btn_recep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Receptionist"
                />
            <Button
                android:id="@+id/login_btn_waiter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Waiter"
                />
        </LinearLayout>
        <Button
            android:id="@+id/login_btn_guard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_btn_layout2"
            android:layout_centerHorizontal="true"
            android:text="Guard"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/login_firstView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/myColorPrimaryLight"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/login_icon"
            android:layout_height="150dp"
            android:layout_width="150dp"
            android:layout_centerInParent="true"
            android:src="@drawable/waiter"
            android:tint="@android:color/white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D Restrau"
            android:textSize="25sp"
            android:textColor="@android:color/white"
            android:layout_below="@id/login_icon"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/networkLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/myColorPrimaryLight"

        >
        <TextView
            android:id="@+id/noInetnetTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="No Internet"
            android:textAllCaps="true"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/button_cover"
            android:padding="16dp"
            />
        <TextView
            android:id="@+id/network_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Check your network connectivity"
            android:layout_below="@id/noInetnetTv"
            />
        <TextView
            android:id="@+id/retryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:background="@drawable/button_cover"
            android:layout_centerInParent="true"
            android:layout_below="@id/network_message"
            android:text="RETRY"
            android:layout_marginTop="32dp"
            android:textStyle="bold"
            android:textColor="@color/myColorAccent"
            android:padding="8dp"
            />


    </RelativeLayout>
</FrameLayout>