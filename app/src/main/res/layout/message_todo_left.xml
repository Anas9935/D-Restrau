<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/message_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16sp"
        tools:background="@drawable/nonveg" />

    <TextView
        android:id="@+id/message_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/message_img"
        android:layout_alignBottom="@+id/message_img"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/message_img"
        tools:text="Name"
        android:gravity="bottom"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/message_img"
        android:layout_toEndOf="@id/message_img"
        android:background="@drawable/message_left"
    >

        <TextView
            android:id="@+id/message_mess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message: I am in a very good mood"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:textColor="@android:color/white"
            />
        <TextView
            android:id="@+id/message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:layout_marginStart="16sp"
            android:textColor="@android:color/white"
            />
    </LinearLayout>


</RelativeLayout>